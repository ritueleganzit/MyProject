<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MainActivity"
   >

    <ImageView
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/bg_imag1"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="550dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="70dp"
                android:layout_marginRight="25dp"
                android:background="@drawable/trans_rect1"
                android:paddingLeft="15dp"
                android:focusableInTouchMode="true"
                android:paddingRight="15dp">

                <TextView
                    android:id="@+id/tv4_login"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:text="Login"
                    android:textColor="@android:color/white"
                    android:textSize="40dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv1_uname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="120dp"
                    android:drawableRight="@drawable/ic_person_black_24dp"
                    android:text="Username*"
                    android:textColor="@android:color/white"
                    android:textSize="20sp" />


                <EditText
                    android:id="@+id/ed1_uname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv1_uname"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/rect2"
                    android:padding="5dp"
                    android:textColor="@android:color/white" />

                <TextView
                    android:id="@+id/tv2_pass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ed1_uname"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="20dp"
                    android:drawableRight="@drawable/ic_vpn_key_black_24dp"
                    android:text="Password*"
                    android:textColor="@android:color/white"
                    android:textSize="20sp" />


                <EditText
                    android:id="@+id/ed2_pass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv2_pass"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="-15dp"
                    android:background="@drawable/rect2"
                    android:inputType="textPassword"
                    android:padding="5dp"
                    android:textColor="@android:color/white" />

                <TextView
                    android:id="@+id/tv3_forgot"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ed2_pass"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="30dp"
                    android:text="Forgot Password?"
                    android:textColor="@android:color/white"
                    android:textSize="15sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="350dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv3_forgot"
                        android:text="Not a member? "
                        android:textColor="@android:color/white"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/txt2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="1dp"
                        android:clickable="true"
                        android:onClick="Click"
                        android:text="Sign up now."
                        android:textColor="@android:color/white"
                        android:textSize="15dp" />

                </LinearLayout>

            </RelativeLayout>

            <Button
                android:id="@+id/btn_login"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv3_forgot"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="595dp"
                android:background="@drawable/button"
                android:backgroundTint="@android:color/white"
                android:text="LOGIN"
                android:textColor="@color/pink" />


        </FrameLayout>
    </ScrollView>

    </FrameLayout>